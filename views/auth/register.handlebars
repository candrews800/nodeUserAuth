<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h1>Register</h1>
        <form action="auth/register" method="post">
            <div class="form-group {{#if errors.email }} has-error {{/if}}">
                <label class="control-label">Email {{#if errors.email }} <small> - {{ errors.email }}</small> {{/if}}</label>
                <input type="email" value="{{ email }}" name="email" placeholder="Email" class="form-control" required />
            </div>
            <div class="form-group {{#if errors.password }} has-error {{/if}}">
                <label class="control-label">Password {{#if errors.password }} <small> - {{ errors.password }}</small> {{/if}}</label>
                <input type="password" name="password" placeholder="Password" class="form-control" required />
            </div>
            <div class="form-group {{#if errors.password_confirm }} has-error {{/if}}">
                <label class="control-label">Confirm Password {{#if errors.password_confirm }} <small> - {{ errors.password_confirm }}</small> {{/if}}</label>
                <input type="password" name="password_confirm" placeholder="Confirm Password" class="form-control" required />
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>